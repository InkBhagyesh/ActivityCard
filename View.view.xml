<mvc:View
    xmlns:core="sap.ui.core"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    width="100%"
    controllerName="com.winslow.Activities.Card"
    busyIndicatorDelay="0"
>
    <List
        showSeparators="All"
        items="{LocalModel>/}"
        width="auto"
    >
        <headerToolbar>
            <OverflowToolbar>
                <Title
                    text="Activities"
                    class="customListTitle"
                    level="H1"
                />
            </OverflowToolbar>
        </headerToolbar>
        <CustomListItem>
            <VBox class="sapUiTinyMarginTopBottom sapUiSmallMarginBeginEnd">
                <Text
                    text="{path: 'LocalModel>date', formatter: '.Formatter.formatDate' }"
                />
                <Link
                    class="customListLink"
                    press="handleFilePress"
                    text="{LocalModel>name}"
                    wrapping="true"
                />
                <Text
                    text="{LocalModel>description}"
                    visible="{= !!${LocalModel>description}}"
                    wrapping="true"
                />
            </VBox>
            <!-- <HBox
                alignItems="Center"
                renderType="Bare"
            >
                <core:Icon
                    size="2rem"
                    class="sapUiTinyMarginBeginEnd"
                    src="{path: 'LocalModel>mime', formatter: '.Formatter.doctypeicon' }"
                />
                
            </HBox> -->
        </CustomListItem>
        <!-- <items>
            <StandardListItem
                title="{LocalModel>name}"
                description="{LocalModel>description}"
                info="{path: 'LocalModel>date', formatter: '.Formatter.formatDate' }"
                icon="{path: 'LocalModel>mime', formatter: '.Formatter.doctypeicon' }"
                iconInset="false"
                infoTextDirection="Inherit"
                type="Active"
                press=".handleFilePress"
                wrapping="true"
            />
        </items> -->
    </List>
    <Link
        class="sapUiSmallMarginBegin sapUiTinyMargin"
        text="VIEW ALL ACTIVITY"
        press="onPressLink"
    />
</mvc:View>
